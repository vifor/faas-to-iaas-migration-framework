# Environment Configuration Templates

# Copy this file to .env.development, .env.staging, or .env.production
# and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=PetStore Monolith
APP_VERSION=1.0.0

# AWS Configuration
AWS_REGION=us-east-1
TABLE_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Environment suffix for table names (matching Lambda pattern)
ENV=development

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_LOCAL_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_PREFIX=dev
USE_LOCAL_DYNAMODB=true

# DynamoDB Connection Settings
DYNAMODB_MAX_RETRIES=3
DYNAMODB_TIMEOUT=30000

# Table Names (will have ENV suffix applied)
FRANCHISE_TABLE_NAME=petstoreFranchise
TENANTS_TABLE_NAME=petstoreTenants

# Authentication Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d
AUTH_ISSUER=petstore-app

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# AWS Verified Permissions (for future authorization implementation)
AVP_POLICY_STORE_ID=your_policy_store_id_here
AVP_IDENTITY_SOURCE=your_identity_source_here
AVP_REGION=us-east-1

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/lambda/petstore-monolith
CLOUDWATCH_LOG_STREAM=development

# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================

# Production Application Configuration
# NODE_ENV=production
# PORT=3000

# Production AWS Configuration
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-production-access-key-id
# AWS_SECRET_ACCESS_KEY=your-production-secret-access-key

# Production DynamoDB Configuration
# DYNAMODB_FRANCHISE_TABLE=petstoreFranchise
# DYNAMODB_STORE_TABLE=petstoreTenants

# Production Authentication Configuration
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# JWT_EXPIRATION=24h
# API_KEY=your-api-key-for-admin-endpoints

# Production Monitoring Configuration
# LOG_LEVEL=info
# METRICS_ENABLED=true

# Production Grafana Configuration
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=change-this-password

# Optional: Database Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Optional: SSL Configuration
# SSL_ENABLED=true
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem